# reset configuration

set header_cache = "~/.cache/mutt/reset/headers"
set message_cachedir = "~/.cache/mutt/reset/messages"

# Folders
set spoolfile="+reset/inbox"
set postponed="+reset/bak.drafts"
set record="+reset/bak.sent_mail"
set mbox="+reset/archives"

mailboxes "+====== reset ===========" \
          "+reset/inbox" \
          "+reset/archives" \
          "+reset/bak.drafts" \
          "+reset/bak.sent_mail" \
          "+reset/bak.trash" \

# Specific macros
macro index,pager gi "<change-folder>+reset/inbox<enter>" "Go to inbox"
macro index,pager ga "<change-folder>+reset/archives<enter>" "Go to all mail"
macro index,pager gs "<change-folder>+reset/bak.sent_mail<enter>" "Go to sent mail"
macro index,pager gt "<change-folder>+reset/bak.trash<enter>" "Go to trash"
macro index,pager gd "<change-folder>+reset/bak.drafts" "Go to drafts"
macro index,pager gv "<change-folder>+reset/varia<enter>" "Go to Varia label"
macro index,pager g8 "<change-folder>+reset/numeros.#8<enter>" "Go to Numéro 8 label"
macro index,pager g7 "<change-folder>+reset/numeros.#7<enter>" "Go to Numéro 7 label"

macro index,pager .s '<enter-command>unset wait_key<enter><shell-escape>offlineimap -o -a reset -f INBOX<enter><enter-command>set wait_key<enter>' 'Sync inbox'
macro index,pager .S '<enter-command>unset wait_key<enter><shell-escape>offlineimap -o -a reset<enter><enter-command>set wait_key<enter>' 'Sync everything'

# Archive with one key
macro index,pager aa "<collapse-thread><tag-thread><clear-flag>N<save-message>+reset/archives<enter><untag-pattern>.<enter>" "Move to archives"
macro index,pager ai "<collapse-thread><tag-thread><clear-flag>N<save-message>+reset/inbox<enter><untag-pattern>.<enter>" "Move to inbox"
macro index,pager a8 "<collapse-thread><tag-thread><clear-flag>N<save-message>+reset/numeros.#8<enter><untag-pattern>.<enter>" "Apply label Numéro #8"
macro index,pager a7 "<collapse-thread><tag-thread><clear-flag>N<save-message>+reset/numeros.#7<enter><untag-pattern>.<enter>" "Apply label Numéro #7"
macro index,pager av "<collapse-thread><tag-thread><clear-flag>N<save-message>+reset/varia<enter><untag-pattern>.<enter>" "Apply label Varia"

# SMTP
set sendmail="msmtp-enqueue -a reset --user=$my_reset_em --from=$my_reset_em"
set from="$my_name_reset <$my_reset_em@reset.com>"
