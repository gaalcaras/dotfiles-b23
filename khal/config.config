[calendars]

[[rdv]]
path = ~/.calendars/personal/
color = light blue
priority = 30

[[background]]
path = ~/.calendars/commun/
color = "#586e75"

[[output]]
path = ~/.calendars/criture/
color = "#6c71c4"

[[input]]
path = ~/.calendars/input/
color = "#cb4b16"

[[admin]]
path = ~/.calendars/admin/
color = dark cyan

[[taskwarrior]]
path = ~/.calendars/taskwarrior/
color = light red
priority = 20

[[trainline]]
path = ~/.calendars/trainline/
color = "#b58900"
readonly = True

[[holidays]]
path = ~/.calendars/holidays/
color = "#586e75"
readonly = True

[[school]]
path = ~/.calendars/school/
color = "#586e75"
readonly = True

[default]
default_calendar = rdv
highlight_event_days = true
timedelta = 7d

[keybindings]
down = down,t
up = up,s
left = left,c
right = right,r
today = T

[locale]
timeformat = %H:%M
dateformat = %Y-%m-%d
longdateformat = %Y-%m-%d
datetimeformat = %Y-%m-%d %H:%M
longdatetimeformat = %Y-%m-%d %H:%M
local_timezone = 'Europe/Paris'
default_timezone = 'Europe/Paris'
