[colors]
brblack   = 002b36
black     = 073642
brgreen   = 586e75
bryellow  = 657b83
brblue    = 839496
brcyan    = 93a1a1
white     = eee8d5
brwhite   = fdf6e3
yellow    = b58900
brred     = cb4b16
red       = dc322f
magenta   = d33682
brmagenta = 6c71c4
blue      = 268bd2
cyan      = 2aa198
green     = 859900

[bar/base]
enable-ipc = true
bottom = true
width = 100%
height = 25

base2 = ${colors.black}
base0 = ${colors.brblue}

background = ${self.base2}
foreground = ${self.base0}

underline-size = 2
underline-color = ${colors.green}

border-size = 0

padding-top = 1
padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = "Deja Vu Sans Mono:size=8;0"
font-1 = "Font Awesome 5 Free:style=Regular:pixelsize=9;0"
font-2 = "Font Awesome 5 Free:style=Solid:pixelsize=9;0"
font-3 = "Font Awesome 5 Brands:style=Regular:pixelsize=9;0"
font-4 = "Icons:size=9;0"

modules-left = i3
modules-center = date khal email task mr
modules-right = backlight-acpi alsa pulseaudio vpn wlan battery

cursor-click = pointer
cursor-scroll = ns-resize

tray-position = right

[bar/light]
inherit=bar/base

base3 = ${colors.brwhite}
base2 = ${colors.white}
base1 = ${colors.brcyan}
base0 = ${colors.bryellow}
base-1 = ${colors.brgreen}

[bar/dark]
inherit=bar/base

base3 = ${colors.brblack}
base2 = ${colors.black}
base1 = ${colors.brgreen}
base0 = ${colors.brblue}
base-1 = ${colors.brcyan}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

ws-icon-0 = 0;
ws-icon-1 = 1;
ws-icon-2 = 2;
ws-icon-3 = 3;
ws-icon-4 = 4;
ws-icon-5 = 5;
ws-icon-6 = 6;
ws-icon-7 = 7;
ws-icon-8 = 8;
ws-icon-9 = 9;
ws-icon-10 = 10;
ws-icon-default = 

label-separator =   
label-separator-padding = 0

label-mode = %index% %icon%
label-mode-padding = 0
label-mode-foreground = ${colors.magenta}
label-mode-background = ${colors.green}

; focused = Active workspace on focused monitor
label-focused = ${self.label-mode}
label-focused-underline = ${root.base0}
label-focused-foreground = ${root.base0}
label-focused-padding = ${self.label-mode-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = ${self.label-mode}
label-unfocused-foreground = ${root.base1}
label-unfocused-padding = ${self.label-mode-padding}

; visible = Active workspace on unfocused monitor
label-visible = ${self.label-mode}
label-visible-foreground = ${colors.brred}
label-visible-underline = ${colors.brred}
label-visible-padding = ${self.label-mode-padding}

; urgent = Workspace with urgency hint set
label-urgent = ${self.label-mode}
label-urgent-underline = ${colors.red}
label-urgent-foreground = ${colors.red}
label-urgent-padding = ${self.label-mode-padding}

[module/xbacklight]
type = internal/xbacklight

format = <label>
label =  %percentage%%

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/wlan]
type = internal/network
interface = wlp3s0b1
interval = 5

format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colors.yellow}
label-connected = %essid% ↓%downspeed%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${root.base0}

[module/date]
type = internal/date
interval = 5

date = "%Y-%m-%d"
time = %H:%M

format-underline = ${colors.blue}

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume =  %percentage%%
label-volume-foreground = ${root.base0}

label-muted = 
label-muted-foreground = ${root.base1}

[module/alsa]
type = internal/alsa

master-soundcard = hw:0
speaker-soundcard = hw:0
headphone-soundcard = hw:0

master-mixer = Master
speaker-mixer = Speaker
headphone-mixer = Headphone

headphone-id = 24

; Use volume mapping (similar to amixer -M and alsamixer), where the increase
; in volume is linear to the ear
mapped = true

; Interval for volume increase/decrease (in percent points)
interval = 5

format-volume = <ramp-volume> <label-volume>

label-muted = 
label-muted-foreground = #66

; Only applies if <ramp-volume> is used
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

; If defined, it will replace <ramp-volume> when
; headphones are plugged in to `headphone_control_numid`
; If undefined, <ramp-volume> will be used for both
; Only applies if <ramp-volume> is used
ramp-headphones-0 = 
ramp-headphones-1 = 

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.green}

format-discharging = <label-discharging>
format-discharging-underline = ${colors.brred}

format-full-underline = ${self.format-charging-underline}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${root.base0}
animation-charging-framerate = 750

animation-discharging-foreground = ${colors.base0}
animation-discharging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <label>
format-underline = ${colors.red}
format-warn = <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.red}

[module/khal]
type = custom/script
exec = ~/.dotfiles/polybar/scripts/khal
interval = 5
click-left=termite -t ikhal -e ikhal

format-underline = ${colors.magenta}

[module/task]
type = custom/script
exec = ~/.dotfiles/polybar/scripts/task
interval = 5
click-left=termite --hold -t task -e task

format-underline = ${colors.brmagenta}

[module/mr]
type = custom/script
exec = ~/.dotfiles/polybar/scripts/mr
interval = 5
click-left=termite --hold -t mr -e "mr status"

format-underline = ${colors.brred}

[module/date_tz]
type = custom/script
exec = ~/.dotfiles/polybar/scripts/date_tz
interval = 5
click-left=$BROWSER "https://www.worldtimebuddy.com/?pl=1&lid=5391959,2988507&h=5391959"

format-underline = ${colors.cyan}

[module/vpn]
type = custom/script
exec = ~/.dotfiles/polybar/scripts/vpn
interval = 5

format-underline = ${colors.brred}
format-padding = 1

click-left=termite -t network -e nmtui

[module/email]
type = custom/script
exec = python ~/.dotfiles/polybar/scripts/watch_inbox.py
interval = 300

format-underline = ${colors.cyan}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

