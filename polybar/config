[colors]
brblack   = 002b36
black     = 073642
brgreen   = 586e75
bryellow  = 657b83
brblue    = 839496
brcyan    = 93a1a1
white     = eee8d5
brwhite   = fdf6e3
yellow    = b58900
brred     = cb4b16
red       = dc322f
magenta   = d33682
brmagenta = 6c71c4
blue      = 268bd2
cyan      = 2aa198
green     = 859900

[bar/base]
enable-ipc = true
bottom = true
width = 100%
height = 50

base2 = ${colors.black}
base0 = ${colors.brblue}

background = ${self.base2}
foreground = ${self.base0}

underline-size = 5
underline-color = ${colors.green}

border-size = 0

padding-top = 1
padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = "Deja Vu Sans Mono:size=16;0"
font-1 = "Icons:size=18;0"

modules-left = i3
modules-center = 
modules-right = backlight-acpi pulseaudio wlan battery temperature date

cursor-click = pointer
cursor-scroll = ns-resize

[bar/light]
inherit=bar/base

base3 = ${colors.brwhite}
base2 = ${colors.white}
base1 = ${colors.brcyan}
base0 = ${colors.bryellow}
base-1 = ${colors.brgreen}

[bar/dark]
inherit=bar/base

base3 = ${colors.brblack}
base2 = ${colors.black}
base1 = ${colors.brgreen}
base0 = ${colors.brblue}
base-1 = ${colors.brcyan}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

ws-icon-0 = 0;
ws-icon-1 = 1;
ws-icon-2 = 2;
ws-icon-3 = 3;
ws-icon-4 = 4;
ws-icon-5 = 5;
ws-icon-6 = 6;
ws-icon-7 = 7;
ws-icon-8 = 8;
ws-icon-9 = 9;
ws-icon-10 = 10;
ws-icon-default = _

label-mode = %index% %icon%
label-mode-padding = 1
label-mode-foreground = ${colors.magenta}
label-mode-background = ${colors.green}

; focused = Active workspace on focused monitor
label-focused = ${self.label-mode}
label-focused-underline = ${colors.green}
label-focused-foreground = ${colors.green}
label-focused-padding = ${self.label-mode-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = ${self.label-mode}
label-unfocused-padding = ${self.label-mode-padding}

; visible = Active workspace on unfocused monitor
label-visible = ${self.label-mode}
label-visible-background = ${colors.brred}
label-visible-padding = ${colors.brred}

; urgent = Workspace with urgency hint set
label-urgent = ${self.label-mode}
label-urgent-background = ${colors.red}
label-urgent-padding = ${colors.red}

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = ${root.base0}
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = ${colors.magenta}
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${root.base0}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/wlan]
type = internal/network
interface = wlp58s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colors.magenta}
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = -
ramp-signal-1 = ~
ramp-signal-2 = +
ramp-signal-foreground = ${root.base0}

[module/date]
type = internal/date
interval = 5

date = "%Y-%m-%d"
time = %H:%M

format-underline = ${colors.blue}

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = VOL %percentage%%
label-volume-foreground = ${root.base0}

label-muted = muted
label-muted-foreground = ${root.base1}

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.green}
bar-volume-foreground-1 = ${colors.green}
bar-volume-foreground-2 = ${colors.green}
bar-volume-foreground-3 = ${colors.green}
bar-volume-foreground-4 = ${colors.yellow}
bar-volume-foreground-5 = ${colors.yellow}
bar-volume-foreground-6 = ${colors.brred}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${root.base0}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.green}

format-discharging = <label-discharging>
format-discharging-underline = ${colors.brred}

format-full-underline = ${self.format-charging-underline}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-foreground = ${root.base0}
animation-charging-framerate = 750

animation-discharging-foreground = ${colors.base0}
animation-discharging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <label>
format-underline = ${colors.red}
format-warn = <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.red}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

