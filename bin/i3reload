#!/bin/bash

# #####################
# Reload i3 config file
# by @gaalcaras
#
# #####################

notify-send -a "i3wm" "Reloading i3 config..." -u low -t 5000

I3="$HOME/.dotfiles/i3"
I3CONFIG="$HOME/.config/i3/config"

if grep -Fxq "# COLORS - SOLARIZEDÂ DARK" "$I3CONFIG"
then
    theme="dark"
else
    theme="light"
fi

cat "$I3/$theme" "$I3/config_local" > "$I3CONFIG"
i3-msg -q reload
