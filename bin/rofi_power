#!/bin/bash
# ########################################################################
# ROFI SCRIPT: POWER
# by Gabriel Alcaras
#
# Helper script to power down, reboot, suspend, hibernate, lock and so on.
#
# Script to be used as an extra mode for rofi (using -modi argument or the
# config file).
# ########################################################################


# -----
# SETUP
# -----
OPTIONS=$(printf "lock\\nsuspend\\nexit\\nhibernate\\nshutdown\\nreboot")

option=$(echo -e "$OPTIONS" | rofi -dmenu -i -p power -theme dark | awk '{print $1}' | tr -d '\r\n')
if [ ${#option} -gt 0 ]
then
    case $option in
      reboot)
        systemctl reboot
        ;;
      shutdown)
        systemctl poweroff
        ;;
      exit)
        i3-msg exit
        ;;
      lock)
        i3lock_theme
        ;;
      suspend)
        i3lock_theme
        systemctl suspend
        ;;
      hibernate)
        i3lock_theme
        systemctl hibernate
        ;;
      *)
        ;;
    esac
  fi
