#!/bin/bash

i3lock \
  --bar-indicator \
  -c 1d1f21ff \
  --bar-color=282a2eff \
  --bar-pos=h/2 \
  --bar-periodic-step 50 \
  --bar-step 50 \
  --layout-color=c5c8c6ff \
  --ringver-color=f0c674ff \
  --ringwrong-color=cc6666ff \
  --keyhl-color=f0c674ff \
  --redraw-thread \
  --clock --force-clock \
  --time-color=b294bbff --time-size=60 --time-pos w/2:by+h/2-30 \
  --date-color=8abeb7ff --date-size=40 --date-pos tx:ty+105 \
  && sleep 5; xset dpms force off
