#!/bin/bash

I3CONFIG="$HOME/.config/i3/config"

if grep -Fxq "# COLORS - SOLARIZED DARK" "$I3CONFIG"
then
  i3lock \
    --image ~/.dotfiles/wallpaper/slqd22_dark.png \
    --ignore-empty-password \
    --composite \
    --insidevercolor=002b36ff --insidewrongcolor=002b36ff --insidecolor=002b36ff \
    --ringwrongcolor=839496ff --ringvercolor=839496ff --ringcolor=839496ff \
    --verifcolor=859900ff --wrongcolor=cb4b16ff \
    --keyhlcolor=859900ff --bshlcolor=cb4b16ff \
    --separatorcolor=2aa19899 \
    --line-uses-inside \
    --ring-width=6 \
    --veriftext="checking" --wrongtext="wrong" --noinputtext="reset" \
    --verif-font="DejaVu Sans Mono" --wrong-font="DejaVu Sans Mono" \
    --verifsize=24 --wrongsize=24
else
  i3lock -i ~/.dotfiles/wallpaper/slqd22_light.png \
    --ignore-empty-password \
    --composite \
    --insidevercolor=ffffd7ff --insidewrongcolor=ffffd7ff --insidecolor=ffffd7ff \
    --ringwrongcolor=626262ff --ringvercolor=626262ff --ringcolor=626262ff \
    --verifcolor=859900ff --wrongcolor=cb4b16ff \
    --keyhlcolor=859900ff --bshlcolor=cb4b16ff \
    --separatorcolor=2aa19899 \
    --line-uses-inside \
    --ring-width=6 \
    --veriftext="checking" --wrongtext="wrong" --noinputtext="reset" \
    --verif-font="DejaVu Sans Mono" --wrong-font="DejaVu Sans Mono" \
    --verifsize=24 --wrongsize=24
fi

