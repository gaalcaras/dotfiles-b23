# ################
# Compton settings
# by gaalcaras
# ################

# Opacity
menu-opacity = 1.0;
inactive-opacity = 0.97;
active-opacity = 0.97;
inactive-opacity-override = false;

# wmctrl -lx to list window titles and classes
opacity-rule = [
   "100:class_g = 'mpv'",
   "100:class_g = 'plexmediaplayer'",
   "100:class_g = 'molotov'",
   "100:class_g = 'Firefox'"
];

# Window type settings
wintypes:
{
  tooltip = { fade = true; shadow = false; opacity = 0.75; };
};

# Prevent mpv / youtube fullscreen tearing on XPS 13
backend = "glx";
mark-wmwin-focused = true;
mark-ovredir-focused = true;
detect-client-opacity = true;
unredir-if-possible = true;
refresh-rate = 0;
vsync = "none";
dbe = false;
paint-on-overlay = true;
