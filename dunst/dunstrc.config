[global]
  follow = keyboard

  geometry = "300x5-25+25" # [{width}]x{height}[+/-{x}+/-{y}]
  transparency = 5 # Range: [0; 100]
  frame_width = 2
  frame_color = "#b58900" # yellow
  separator_height = 2
  separator_color = "#073642" # lighter color
  padding = 15
  horizontal_padding = 15

  # Don't remove messages, if the user is idle for...
  idle_threshold = 120

  ### Text ###

  font = DejaVu Sans Mono 9
  markup = full
  format = "<b>%a</b>\n%s <i>%b</i>"

  # Show age of message if message is older than show_age_threshold
  show_age_threshold = 60

  # Split notifications into multiple lines if they don't fit into geometry.
  word_wrap = yes

  dmenu = "~/.dotfiles/dunst/rofi_dunst"
  browser = /usr/bin/firefox -new-tab

  # Defines action of mouse event
  mouse_left_click = close_current
  mouse_middle_click = do_action
  mouse_right_click = close_all

[shortcuts]

  close = ctrl+space
  close_all = ctrl+mod1+space
  history = ctrl+grave
  context = ctrl+shift+space

[urgency_low]
  # Blue
  background = "#002b36"
  foreground = "#268bd2"
  frame_color = "#268bd2"
  timeout = 10

[urgency_normal]
  # Yellow
  background = "#002b36"
  foreground = "#b58900"
  frame_color = "#b58900"
  timeout = 10

[urgency_critical]
  # Red
  background = "#002b36"
  foreground = "#dc322f"
  frame_color = "#dc322f"
  timeout = 0
